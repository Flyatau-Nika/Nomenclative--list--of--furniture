<Page x:Class="Nomenclative__list__of__furniture.FurniturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nomenclative__list__of__furniture"
      mc:Ignorable="d"
      Title="FurniturePage" Height="300" Width="804" VerticalAlignment="Center" HorizontalAlignment="Center">

    <Grid Margin="-10,-10,10,10">
        <ListView x:Name="listViewfurn" HorizontalAlignment="Center" Height="300" VerticalAlignment="Center" Width="804" Margin="10,10,-10,-10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Наименование" Width="100" DisplayMemberBinding="{Binding Path=name}"/>
                    <GridViewColumn Header="Размер" Width="100" DisplayMemberBinding="{Binding Path=size}"/>
                    <GridViewColumn Header="Набор" Width="70" DisplayMemberBinding="{Binding Path=set}"/>
                    <GridViewColumn Header="Цвет" Width="100" DisplayMemberBinding="{Binding Path=colour}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
